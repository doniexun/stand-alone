@ECHO OFF & SetLocal EnableDelayedExpansion & CLS & Echo.

SET CUR_DIRECTORY=%~dp0
SET CUR_FILE_MAIN_NAME=%~n0
SET CUR_FILE_EXT_NAME=%~x0
SET CUR_FILE_FILE_NAME=%~nx0
SET VERBOSE=%~1


if /i %PROCESSOR_IDENTIFIER:~0,3%==x86 (
	SET LONG_BIT=32
) else (
	SET LONG_BIT=64
)
@SET LONG_BIT=!LONG_BIT!
If "%VERBOSE%" == "true" ECHO LONG_BIT = !LONG_BIT!

SET MAIN_EXE=!CUR_FILE_FILE_NAME!
If "%VERBOSE%" == "true" ECHO MAIN_EXE = !MAIN_EXE!

SHIFT /0

IF "!CUR_DIRECTORY:~-1!" == "\" (
    SET APP_HOME=!CUR_DIRECTORY:~0,-1!
)
@SET APP_HOME=!APP_HOME!
If "%VERBOSE%" == "true" Echo APP_HOME=!APP_HOME!

IF "%~1" == "" (
    SET COMMAND=install
) ELSE (
    SET COMMAND=%~1
)
If "%VERBOSE%" == "true" Echo COMMAND=!COMMAND!

SHIFT /0
ECHO show %APP_HOME%  %CUR_FILE_MAIN_NAME% %COMMAND% %*

:run
START "÷¥–– !COMMAND! √¸¡Ó" "!APP_HOME!\bin\!COMMAND!"

EndLocal
